# i3 Config File
# 2018

# Set Mod key as Windows Key
set $mod Mod4

# Terminal
set $terminal st

# sync-files
exec --no-startup-id /home/shigueo/.scripts/sync-files

# Pywal
exec --no-startup-id wal -R

# Set wallpaper
exec nitrogen --restore

# Run Compton, enables transparency
exec_always --no-startup-id  compton 

# Run Polybar
exec_always --no-startup-id ./.polybarstart

# Scratchpad
bindsym $mod+slash move scratchpad
bindsym $mod+equal scratchpad show

# Makes Caps-Lock work as Esc
exec_always xmodmap -e "clear lock"
exec_always xmodmap -e "keysym Caps_Lock = Escape"

# Script for locking after 10 mins
exec xautolock -time 10 -locker lock
bindsym $mod+control+l exec /bin/lock

# Shut
bindsym $mod+Shift+s exec --no-startup-id /home/shigueo/.scripts/shut

# Run NetworkManager
exec --no-startup-id nm-applet

# Sets the gaps for i3-gaps
gaps inner 10
gaps outer 2

# Thin borders
#hide_edge_borders both

new_window pixel 0
default_border pixel 3
default_floating_border pixel 3

# Font for window titles.
font pango: Droid Sans 12 

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+q kill

# Toggles the split direction
bindsym $mod+Tab split toggle

# Start ranger
bindsym $mod+e exec $terminal -e ranger 
for_window [title="ranger"] floating enable border 1px


# Start Firefox
bindsym $mod+w exec firefox

# Octave
bindsym $mod+a exec --no-startup-id $terminal -e octave -q 

