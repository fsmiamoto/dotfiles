[bar/test]
monitor = eDP-1
width = 100%
height = 25
override-redirect = true
background = #424242
foreground = #ffffff
underline-size = 4
underline-color = #c51850
overline-size = 4
overline-color = #c51850
font-0 = dina:pixelsize=7

;imodules-left = tmp
modules-left = zscroll
;modules-left = spotify
;modules-left = tailscript
;modules-left = tailscript tailscript2
;modules-left = test
;modules-center = not-a-tailscript blocking-wait
;modules-center = blocking-wait
;modules-right = test cond intervalscript
;modules-center = test dropbox
;modules-right = intervalscript
;modules-right = loop
;modules-right = tail
;modules-center = cond
;modules-right = tail blocking-wait tailscript intervalscript tailscript2

[module/zscroll]
type = custom/script
exec = ~/bin/mpc_scroll.sh
tail = true
interval = 0

[module/tail]
type = custom/script
exec = tail -f /tmp/fifo
tail = true
interval = 0

[module/blocking-wait]
type = custom/script
;exec = mpc idleloop
exec = cat
tail = true

[module/test]
type = custom/script
exec = echo ÙèøΩ test %counter% | scroller -p -c 7
tail = true
interval = 0

[module/tailscript]
type = custom/script
exec = xtitle -s
tail = true
interval = 0

[module/tailscript2]
type = custom/script
exec = mpc current; mpc idleloop | while read -r line; do mpc current; done
tail = true
interval = 1

[module/not-a-tailscript]
type = custom/script
exec = mpc status | head -1
;tail = true
interval = 2

[module/intervalscript]
type = custom/script
label = test
exec = pgrep -x watch
interval = 2
format-underline = #268bd2
format-prefix = "! "
format-prefix-foreground = #5b

;format = <label>
;label = %output:0:3%
click-left = echo left %counter%
click-middle = echo middle %counter%
click-right = echo right %counter%
scroll-up = echo scroll up %counter%
scroll-down = echo scroll down %counter%

[module/spotify]
type = custom/script
exec = find /
interval = 2

[module/tmp]
type = custom/script
;exec = bash -c 'date=$(date); count=$(echo "1\n2\n3\n4" | wc -l) && [ $count -gt 0 ] && echo "AUR $count $date"'
exec = ~/bin/torrents.sh | head -1
interval = 10

[module/dropbox]
type = custom/script
exec = /tmp/dropbox.sh
format-underline = #458588
click-left = dropbox start
;click-left = echo sleeping && sleep 4 & echo sleeping 2
interval = 2
format-padding = 2

[module/cond]
type = custom/script
exec = echo condition $(date +%s)
exec-if = pgrep -x watch
interval = 3

