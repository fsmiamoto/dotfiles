###### Definitions ######

set $mod Mod4 
set $terminal --no-startup-id st 

font xft:Droid Sans 12

default_border pixel 3 
default_floating_border pixel 3 

focus_follows_mouse yes

# Gaps
set $innergap 12
set $outergap 5 
gaps inner $innergap 
gaps outer $outergap 

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

###### External programs ######

# Polybar
exec_always --no-startup-id .config/polybar/polybarstart.sh

###### Key bindings ######

# Kill window
bindsym $mod+q kill

# Terminal
bindsym $mod+Return exec $terminal
bindsym $mod+Shift+Return exec --no-startup-id .scripts/samedir

bindsym $mod+p exec --no-startup-id .scripts/plumber

# Ranger
bindsym $mod+e exec --no-startup-id $terminal -e ranger
# Lock screen
bindsym $mod+Shift+e exec --no-startup-id $terminal -e neomutt

# Web browser
bindsym $mod+w exec firefox
# NetworkManager
bindsym $mod+Shift+w exec --no-startup-id $terminal -e nmtui

# Calculator
bindsym $mod+a exec --no-startup-id $terminal -e octave-cli -q 
# Pulsemixer
bindsym $mod+Shift+a exec --no-startup-id $terminal -e pulsemixer

# Options menu
bindsym $mod+Escape exec .scripts/shut

# ncmpcpp
bindsym $mod+m exec  --no-startup-id $terminal -e ncmpcpp

# Calendar
bindsym $mod+c exec $terminal -e calcurse

# Rofi, app launcher
bindsym $mod+d exec rofi -show drun -show-icons 

# Scratpatch
bindsym $mod+slash move scratchpad
bindsym $mod+backslash scratchpad show

# Gaps
bindsym $mod+Shift+o gaps outer all set $outergap; gaps inner all set $innergap;
bindsym $mod+Shift+p gaps outer all set 0; gaps inner all set 0;

# Restart i3
bindsym $mod+Shift+r restart

# Change borders
bindsym $mod+b border toggle

# Printscreen
bindsym Ctrl+Print exec --no-startup-id i3-scrot
bindsym Print exec --no-startup-id flameshot gui

# Audio related media keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +3%; exec pkill -RTMIN+10 i3blocks 
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -3%; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle; exec pkill -RTMIN+10
bindsym XF86AudioNext exec notify-send "Woohoo!"
bindsym XF86AudioPrev exec notify-send "Woohoo!"
bindsym XF86AudioPlay exec notify-send "Woohoo!"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split orientation
bindsym $mod+Tab split toggle

# Fullscreen mode
bindsym $mod+f fullscreen toggle

# Floating control
bindsym $mod+space floating toggle
bindsym $mod+Shift+Tab focus mode_toggle

#navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5:
set $ws6 6:
set $ws7 7:
set $ws8 8:
set $ws9 9
set $ws10 10

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move to another workspace 
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Resize window
bindsym $mod+o  resize shrink width 10px or 10ppt
bindsym $mod+i  resize grow height 10px or 10ppt
bindsym $mod+u resize shrink height 10px or 10ppt
bindsym $mod+y resize grow width 10px or 10ppt

###### Colors ######

# Color palette used for the terminal ( ~/.Xresources file )
set_from_resource $background background
set_from_resource $foreground foreground
set_from_resource $color0     color0
set_from_resource $color1     color1
set_from_resource $color2     color2
set_from_resource $color3     color3
set_from_resource $color4     color4
set_from_resource $color5     color5
set_from_resource $color6     color6
set_from_resource $color7     color7
set_from_resource $color8     color8
set_from_resource $color9     color9
set_from_resource $color10    color10
set_from_resource $color11    color11
set_from_resource $color12    color12
set_from_resource $color13    color13
set_from_resource $color14    color14
set_from_resource $color15    color15

## class                 border          backgr.      text         indicator    child_border
client.focused          $background     $background  $foreground  $color3      $color2
client.focused_inactive $background     $background  $foreground  $color2      $color1
client.unfocused        $background     $background  $foreground  $color2      $color1
client.urgent           $background     $background  $foreground  $color2      $color1
client.placeholder      $background     $background  $foreground  $color2      $color1
client.background       $background

######  Window configs ######

# Change to urgent workspace
for_window [urgent=latest] focus

# Opens as floating window
for_window [class="qutebrowser"] floating enable 
for_window [class="matplotlib"] floating enable 
for_window [class="GNU Octave"] floating enable 
for_window [title="pulsemixer"] floating enable 
for_window [title="ranger"] floating enable 
for_window [title="octave"] floating enable 
for_window [class="Lightdm-settings"] floating enable
for_window [title="MuseScore: Play Panel"] floating enable
for_window [title="ncmpcpp"] floating enable 
for_window [title="calcurse"] floating enable 
for_window [class="surf"] floating enable 

# Move to other workspace
for_window [class="Steam"] move to workspace number $ws6
for_window [class="Spotify"] move to workspace number $ws8

# GTK File window
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center

for_window [class="Firefox"] border none
for_window [class="Chromium"] border none

for_window [title="Steam - News"] floating enable border normal 
for_window [title="フレンドリスト"] floating enable border normal

for_window [class="GParted"] floating enable border normal
for_window [title="i3_help"] floating enable sticky enable border normal
for_window [class="Lxappearance"] floating enable sticky enable border normal
for_window [class="Nitrogen"] floating enable sticky enable border normal
for_window [class="qt5ct"] floating enable sticky enable border normal
for_window [class="Qtconfig-qt4"] floating enable sticky enable border normal
for_window [class="Simple-scan"] floating enable border normal
